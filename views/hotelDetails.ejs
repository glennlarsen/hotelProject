<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/navbar.css" rel="stylesheet">
</head>

<body>
  <!-- Include the navbar -->
  <%- include('./partials/navbar', {username: username, userId: userId}) %>

    <section>
      <div class="container">
        <h2 class="text-center text-primary"><i>
            <%=hotel.Name%>
          </i></h2>
        <h3 class="text-center">Location:</h3>
        <h4 class="text-center text-primary"><i>
            <%=hotel.Location%>
          </i></h4>
        <h3 class="text-center">Rate:</h3>
        <% if (hotel.rated !=null && hotel.avg) { %>
          <h4 class="text-center text-primary"><i>
              <%=hotel.avg%>
            </i></h4>
          <% } else if (user !=null) { %>
            <div class="text-center">
              <button onclick="makeRate('<%=userId%>', 'http:\/\/localhost:3000\/hotels\/<%=hotel.id%>\/rate')"
                class="btn btn-success"> Rate hotel</button>
            </div>
            <% } else { %>
              <h4 class="text-center text-primary"><i>Not rated</i></h4>
              <% } %>
      </div>
    </section>

    <script src="../javascripts/makeRate.js"></script>
</body>

</html>