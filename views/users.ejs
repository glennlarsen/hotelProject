<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/users.css">
</head>

<body>
    <!-- Include the navbar -->
    <%- include('./partials/navbar', {username: username, userId: userId, isAdmin: isAdmin}) %>

        <div class="container">
            <h2 class="p-3">Users</h2>
            <div class="list-group">
                <% users.forEach(function(user) { %>
                    <div class="row px-3 py-1 w-100">
                        <span class="col py-1 bg-info">
                            <%=user.FirstName%>
                                <%=user.LastName%>
                        </span>
                        <a href="/users/<%=user.id%>" class="col btn btn-secondary"> Details</a>
                        <button class="btn-danger"
                            onclick="deleteUser('http\:\/\/localhost:3000\/users', '<%=JSON.stringify(user.id)%>', '<%=user.Role%>')">
                            DELETE</button>
                    </div>
                    <% }); %>
            </div>
        </div>
        <script src="../javascripts/deleteUser.js"></script>
</body>

</html>